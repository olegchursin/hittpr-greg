---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import certificate from '~/assets/images/certificate-hong-kong-original.jpg';
import Image from '~/components/common/Image.astro';

const fetivalTitle = 'Hong Kong International Film Carnival';

const metadata = {
  title: fetivalTitle,
};
---

<Layout metadata={metadata}>
  <Hero tagline={fetivalTitle}>
    <Fragment slot="title">Documentary Film</Fragment>

    <Fragment slot="image">
      <div class="relative">
        <Image src={certificate} alt=`${fetivalTitle}: Certificate` width={550} height={760} />
      </div>
    </Fragment>
  </Hero>
</Layout>
