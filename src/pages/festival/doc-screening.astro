---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import certificate from '~/assets/images/certificate-doc-screening.jpg';
import Image from '~/components/common/Image.astro';

const fetivalTitle = 'Doc Screenings Documentary Film Festival';

const metadata = {
  title: fetivalTitle
};
---

<Layout metadata={metadata}>
  <Hero tagline={fetivalTitle}>
    <Fragment slot="title">Special Mention</Fragment>

    <Fragment slot="image">
      <div class="relative">
        <Image src={certificate} alt=`${fetivalTitle}: Certificate` width={800} height={566} />
      </div>
    </Fragment>
  </Hero>
</Layout>
