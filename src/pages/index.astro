      {
        title: 'Documentary Film',
        description: 'Navy International Film Festival',
        icon: 'flat-color-icons:camcorder-pro',
        link: '/festival/navy',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Features3
    title="Credentials"
    subtitle="Meet the masterminds behind Greg: The Secret to My Success"
