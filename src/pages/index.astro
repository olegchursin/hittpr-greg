    actions={[
      // watchOnYoutube
    ]}
  >
    <Fragment slot="title">Greg: The Secret to My Success</Fragment>

    <Fragment slot="subtitle">
      <div>From $70 and a Dream to a Glass Empire: The Inspiring Journey of a Soviet Immigrant.</div>
      <div class="mt-6 text-sm">
        2022 | <span class="border p-0.5">G – General Audiences</span> | 34m | Documentary
      </div>
    </Fragment>

    <Fragment slot="image">
      <div class="relative">
        <Image src={gregPosterImg} alt="Greg: The Secret to My Success" width={550} height={760} />
      </div>
    </Fragment>
  </Hero>

